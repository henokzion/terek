    <% obj.each do |article| %>
        <h1><%= article.title %></h1>
        <p><%= truncate(article.description, length: 100) %></p>
        <small> Created By <%= article.user.username %> </small>
        <em><%= time_ago_in_words(article.created_at) %></em>
        <%= link_to 'show', article_path(article) %>
        <% if logged_in? && current_user == article.user %>
            <%= link_to edit_article_path(article) do%>
                <i class="glyphicon glyphicon-edit"></i>
            <% end %>
            <%= link_to article_path(article), method: :delete, data: { confirm: "are you sure"} do %>
                <i class="glyphicon glyphicon-trash"></i>
            <% end %>
        <% end %>
    <% end %>